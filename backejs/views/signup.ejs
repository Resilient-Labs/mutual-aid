<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Apply | Mutual Aid Bank</title>
    <link rel="stylesheet" href="/css/login-signup.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-moneyhill">
    <nav class="font-dm-sans">
      <div class="nav-pages">
        <a href="/">
          <img src="images/MAB-LOGO.png" alt="Mutual Aid Bank logo" class="logo">
        </a>
        <a href="#" class="hidden">About</a>
        <a href="#" class="hidden">Contact</a>
      </div>
      <div>
        <a href="/login" class="btn-nav-login hidden">Log In</a>
        <a href="/signup" class="btn-nav-apply">Apply</a>
      </div>
    </nav>

    <div class="container flex justify-around my-2">

      <div>
        <div class="signup-copy">
          <h1>Join our large community of folks for free!</h1>
        </div>
        <form action="/signup" method="POST" class="signup-form">
          <!-- NAMES -->
          <div class="name-inputs">
            <div>
              <label class="form-title" for="firstName">First Name <span>*</span></label>
              <div class="name-input input-box">
                <input name="firstName" type="text" placeholder="Bagheera" required />
              </div>
            </div>
            
            <div>
              <label class="form-title" for="lastName">Last Name <span>*</span></label>
              <div class="name-input input-box">
                <input name="lastName" type="text" placeholder="Bestdog" required />
              </div>
            </div>
          </div>
          
          <!-- PRONOUNS -->
          <div>
            <label class="form-title" for="pronouns">Pronouns (Optional)</label>
            <div class="input-box">
              <input name="pronouns" type="text" placeholder="He/Him/Bark" />
            </div>
          </div>

          <div>
            <label class="form-title" for="email">Email</label>
            <div class="input-box">
              <div>
                <i class="fas fa-envelope"></i>
              </div>
              <input name="email" type="email" placeholder="bagheera@hotmail.com" required />
            </div>
            <p class="my-2 privacy-message">
              We'll never share your email with anyone else.
            </p>
          </div>

          <!-- PASSWORD -->
          <div>
            <label class="form-title" for="password">Password <span>*</span>(min 8 characters)</label>
            <div class="input-box">
              <div>
                <i class="fas fa-lock"></i>
              </div>
              <input name="password" type="password" placeholder="whatAGoodBoy37!" required />
            </div>
          </div>

          <button class="apply-btn" type="submit">Sign up</button>
        </form>
      </div> 
      <!-- END OF SIGNUP FORM -->

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
